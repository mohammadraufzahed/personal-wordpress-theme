{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}} bg-primary-2 px-[16px] lg:p-[32px] flex flex-col gap-11" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="w-full max-w-screen mx-auto" >
			{% block header %}
						{% include "menu.twig" %}
			{% endblock %}
		</header>
		{% block content %}
		{% endblock %}
		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
